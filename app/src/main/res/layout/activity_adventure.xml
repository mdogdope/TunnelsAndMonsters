<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.mehstudios.tunnelsandmonsters.Adventure"
    android:background="@drawable/grass_background"
    android:orientation="vertical">

    <LinearLayout
        android:background="@drawable/adventure_player_inv"

        android:layout_margin="8dp"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">

        <TextView
            android:id="@+id/drop_target"
            android:text="Drop Here"
            android:textColor="@color/black"

            android:layout_width="match_parent"
            android:layout_height="match_parent"
            />

    </LinearLayout>

    <LinearLayout
        android:background="@drawable/adventure_player_stash"

        android:layout_margin="8dp"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/fire_list_item_adv"
            android:layout_width="fill_parent"
            android:layout_height="50dp"
            android:layout_margin="2dp"
            android:background="@color/orange"
            android:clickable="true">

            <ImageView
                android:src="@drawable/fire_img"

                android:layout_width="50dp"
                android:layout_height="fill_parent"
                android:layout_margin="2dp"

                android:clickable="false"
                />

            <TextView
                android:text="Fire"
                android:textColor="@color/black"
                android:textSize="28dp"

                android:layout_width="0dp"
                android:layout_height="fill_parent"
                android:layout_weight="3"
                android:lines="1"
                android:gravity="center"

                android:clickable="false"
                />

            <TextView
                android:id="@+id/shop_fire_level_text_view"
                android:text="lvl 1"
                android:textColor="@color/black"
                android:textSize="24dp"

                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="3"
                android:gravity="center_vertical"
                />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/water_list_item_adv"
            android:layout_width="fill_parent"
            android:layout_height="50dp"
            android:layout_margin="2dp"
            android:background="@color/orange"
            android:clickable="true">

            <ImageView
                android:src="@drawable/water_img"

                android:layout_width="50dp"
                android:layout_height="fill_parent"
                android:layout_margin="2dp"

                android:clickable="false"
                />

            <TextView
                android:text="Water"
                android:textColor="@color/black"
                android:textSize="28dp"

                android:layout_width="0dp"
                android:layout_height="fill_parent"
                android:layout_weight="3"
                android:lines="1"
                android:gravity="center"

                android:clickable="false"
                />

            <TextView
                android:id="@+id/shop_water_level_text_view"
                android:text="lvl 1"
                android:textColor="@color/black"
                android:textSize="24dp"

                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="3"
                android:gravity="center_vertical"
                />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/earth_list_item_adv"
            android:layout_width="fill_parent"
            android:layout_height="50dp"
            android:layout_margin="2dp"
            android:background="@color/orange"
            android:clickable="true">

            <ImageView
                android:src="@drawable/earth_img"

                android:layout_width="50dp"
                android:layout_height="fill_parent"
                android:layout_margin="2dp"

                android:clickable="false"
                />

            <TextView
                android:text="Earth"
                android:textColor="@color/black"
                android:textSize="28dp"

                android:layout_width="0dp"
                android:layout_height="fill_parent"
                android:layout_weight="3"
                android:lines="1"
                android:gravity="center"

                android:clickable="false"
                />

            <TextView
                android:id="@+id/shop_earth_level_text_view"
                android:text="lvl 1"
                android:textColor="@color/black"
                android:textSize="24dp"

                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="3"
                android:gravity="center_vertical"
                />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/air_list_item_adv"
            android:layout_width="fill_parent"
            android:layout_height="50dp"
            android:layout_margin="2dp"
            android:background="@color/orange"
            android:clickable="true">

            <ImageView
                android:src="@drawable/air_img"

                android:layout_width="50dp"
                android:layout_height="fill_parent"
                android:layout_margin="2dp"

                android:clickable="false"
                />

            <TextView
                android:text="Air"
                android:textColor="@color/black"
                android:textSize="28dp"

                android:layout_width="0dp"
                android:layout_height="fill_parent"
                android:layout_weight="3"
                android:lines="1"
                android:gravity="center"

                android:clickable="false"
                />

            <TextView
                android:id="@+id/shop_air_level_text_view"
                android:text="lvl 1"
                android:textColor="@color/black"
                android:textSize="24dp"

                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="3"
                android:gravity="center_vertical"
                />
        </LinearLayout>


    </LinearLayout>
</LinearLayout>
